# 🚀 Production Configuration for Claude Proxy Bridge

# 🔑 Authentication (Choose one method)
# Method 1: API Key (for paid API access)
# ANTHROPIC_API_KEY=sk-ant-api03-...

# Method 2: MAX Subscription (preferred) - no API key needed
# Claude Code SDK will use your MAX subscription automatically

# 🌐 Server Configuration
PORT=3000
NODE_ENV=production
LOG_LEVEL=info

# 🔒 Security
REQUIRE_AUTH=true
AUTHORIZED_API_KEYS=generate-with-setup-script
GITHUB_TOKENS=
ALLOWED_ORIGINS=https://github.com,https://your-domain.com

# 🚦 Rate Limiting (Production settings)
RATE_LIMIT_REQUESTS=200       # General requests per 15 minutes
RATE_LIMIT_WINDOW=900         # 15 minutes
EXPENSIVE_RATE_LIMIT=50       # Claude API calls per hour
EXPENSIVE_RATE_WINDOW=3600    # 1 hour
GHA_RATE_LIMIT=500           # GitHub Actions per hour per repository
GHA_RATE_WINDOW=3600         # 1 hour

# 💾 Cache Configuration (Production)
CACHE_ENABLED=true
CACHE_TTL=600                # 10 minutes
CACHE_MAX_SIZE=1000          # Max cached items

# 🔄 Retry Configuration
RETRY_ATTEMPTS=3
RETRY_DELAY=1000             # 1 second base delay

# 🎯 Claude Configuration
DEFAULT_MODEL=claude-sonnet-4-20250514
MAX_TOKENS=8192              # Maximum for complex tasks

# 📊 Performance
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=120000       # 2 minutes

# 🔧 Features
ENABLE_METRICS=true
ENABLE_STREAM_JSON=true
ENABLE_MCP_SERVERS=true
ENABLE_MULTI_TURN=true

# 📈 Monitoring
HEALTH_CHECK_INTERVAL=30000  # 30 seconds
LOG_ROTATION=true
LOG_MAX_SIZE=50MB
LOG_MAX_FILES=10