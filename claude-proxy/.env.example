# 🔑 Authentication
ANTHROPIC_API_KEY=sk-ant-api03-...
REQUIRE_AUTH=true
AUTHORIZED_API_KEYS=your-api-key-1,your-api-key-2
GITHUB_TOKENS=ghp_token1,ghp_token2

# 🌐 Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# 🚦 Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900
EXPENSIVE_RATE_LIMIT=20
EXPENSIVE_RATE_WINDOW=3600
GHA_RATE_LIMIT=200
GHA_RATE_WINDOW=3600

# 💾 Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=300

# 🔄 Retry Configuration  
RETRY_ATTEMPTS=3
RETRY_DELAY=1000

# 🎯 Claude Configuration
DEFAULT_MODEL=claude-sonnet-4-20250514
MAX_TOKENS=4096

# 🔐 CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://github.com

# 📊 Monitoring
ENABLE_METRICS=true
METRICS_ENDPOINT=/api/metrics